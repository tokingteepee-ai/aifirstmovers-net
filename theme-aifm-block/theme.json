{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "color": {
            "custom": true,
            "customDuotone": true,
            "customGradient": true,
            "defaultDuotones": false,
            "defaultGradients": false,
            "defaultPalette": false,
            "duotone": [],
            "gradients": [
                {
                    "name": "Primary to Secondary",
                    "gradient": "linear-gradient(135deg, #2563eb 0%, #64748b 100%)",
                    "slug": "primary-to-secondary"
                },
                {
                    "name": "Accent Fade",
                    "gradient": "linear-gradient(90deg, #f59e0b 0%, #fbbf24 100%)",
                    "slug": "accent-fade"
                }
            ],
            "palette": [
                {
                    "name": "Primary",
                    "slug": "primary",
                    "color": "#2563eb"
                },
                {
                    "name": "Secondary",
                    "slug": "secondary",
                    "color": "#64748b"
                },
                {
                    "name": "Accent",
                    "slug": "accent",
                    "color": "#f59e0b"
                },
                {
                    "name": "Text Primary",
                    "slug": "text-primary",
                    "color": "#1e293b"
                },
                {
                    "name": "Text Secondary",
                    "slug": "text-secondary",
                    "color": "#475569"
                },
                {
                    "name": "Background Light",
                    "slug": "bg-light",
                    "color": "#f8fafc"
                },
                {
                    "name": "Background White",
                    "slug": "bg-white",
                    "color": "#ffffff"
                },
                {
                    "name": "Border Light",
                    "slug": "border-light",
                    "color": "#e2e8f0"
                }
            ]
        },
        "typography": {
            "customFontSize": true,
            "dropCap": false,
            "fluid": true,
            "fontFamilies": [
                {
                    "name": "Inter",
                    "slug": "inter",
                    "fontFamily": "\"Inter\", sans-serif",
                    "fontFace": [
                        {
                            "fontFamily": "Inter",
                            "fontStyle": "normal",
                            "fontWeight": "300 700",
                            "src": "url(https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap)"
                        }
                    ]
                },
                {
                    "name": "System Font",
                    "slug": "system-font",
                    "fontFamily": "-apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, Oxygen-Sans, Ubuntu, Cantarell, \"Helvetica Neue\", sans-serif"
                }
            ],
            "fontSizes": [
                {
                    "name": "Small",
                    "slug": "small",
                    "size": "0.875rem",
                    "fluid": false
                },
                {
                    "name": "Medium",
                    "slug": "medium",
                    "size": "1rem",
                    "fluid": false
                },
                {
                    "name": "Large", 
                    "slug": "large",
                    "size": "1.125rem",
                    "fluid": false
                },
                {
                    "name": "Extra Large",
                    "slug": "x-large",
                    "size": "1.25rem",
                    "fluid": false
                },
                {
                    "name": "Heading 6",
                    "slug": "heading-6",
                    "size": "1rem",
                    "fluid": false
                },
                {
                    "name": "Heading 5",
                    "slug": "heading-5",
                    "size": "1.125rem",
                    "fluid": false
                },
                {
                    "name": "Heading 4",
                    "slug": "heading-4",
                    "size": "1.25rem",
                    "fluid": {
                        "min": "1.125rem",
                        "max": "1.25rem"
                    }
                },
                {
                    "name": "Heading 3",
                    "slug": "heading-3",
                    "size": "1.5rem",
                    "fluid": {
                        "min": "1.25rem",
                        "max": "1.5rem"
                    }
                },
                {
                    "name": "Heading 2",
                    "slug": "heading-2",
                    "size": "2rem",
                    "fluid": {
                        "min": "1.5rem",
                        "max": "2rem"
                    }
                },
                {
                    "name": "Heading 1",
                    "slug": "heading-1",
                    "size": "2.5rem",
                    "fluid": {
                        "min": "2rem",
                        "max": "2.5rem"
                    }
                }
            ]
        },
        "spacing": {
            "blockGap": true,
            "margin": true,
            "padding": true,
            "units": ["px", "em", "rem", "vh", "vw", "%"],
            "spacingScale": {
                "operator": "*",
                "increment": 1.5,
                "steps": 7,
                "mediumStep": 1.5,
                "unit": "rem"
            }
        },
        "layout": {
            "contentSize": "768px",
            "wideSize": "1200px"
        },
        "border": {
            "color": true,
            "radius": true,
            "style": true,
            "width": true
        },
        "shadow": {
            "presets": [
                {
                    "name": "Small",
                    "slug": "small",
                    "shadow": "0 1px 2px 0 rgb(0 0 0 / 0.05)"
                },
                {
                    "name": "Medium",
                    "slug": "medium", 
                    "shadow": "0 4px 6px -1px rgb(0 0 0 / 0.1)"
                },
                {
                    "name": "Large",
                    "slug": "large",
                    "shadow": "0 10px 15px -3px rgb(0 0 0 / 0.1)"
                }
            ]
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--bg-white)",
            "text": "var(--wp--preset--color--text-primary)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--inter)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "1.6"
        },
        "spacing": {
            "blockGap": "1.5rem"
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--secondary)"
                    }
                }
            },
            "h1": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--heading-1)",
                    "fontWeight": "700",
                    "lineHeight": "1.2"
                },
                "color": {
                    "text": "var(--wp--preset--color--text-primary)"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--heading-2)",
                    "fontWeight": "600",
                    "lineHeight": "1.3"
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--heading-3)",
                    "fontWeight": "600",
                    "lineHeight": "1.4"
                }
            },
            "h4": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--heading-4)",
                    "fontWeight": "500",
                    "lineHeight": "1.4"
                }
            },
            "h5": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--heading-5)",
                    "fontWeight": "500",
                    "lineHeight": "1.5"
                }
            },
            "h6": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--heading-6)",
                    "fontWeight": "500",
                    "lineHeight": "1.5"
                }
            },
            "button": {
                "color": {
                    "background": "var(--wp--preset--color--primary)",
                    "text": "var(--wp--preset--color--bg-white)"
                },
                "typography": {
                    "fontWeight": "600"
                },
                "border": {
                    "radius": "8px"  
                },
                "spacing": {
                    "padding": {
                        "top": "0.75rem",
                        "right": "1.5rem",
                        "bottom": "0.75rem",
                        "left": "1.5rem"
                    }
                },
                ":hover": {
                    "color": {
                        "background": "var(--wp--preset--color--secondary)"
                    }
                }
            }
        },
        "blocks": {
            "core/navigation": {
                "elements": {
                    "link": {
                        "typography": {
                            "fontWeight": "500"
                        }
                    }
                }
            },
            "core/post-title": {
                "typography": {
                    "fontWeight": "700"
                }
            },
            "core/site-title": {
                "typography": {
                    "fontWeight": "700",
                    "fontSize": "var(--wp--preset--font-size--x-large)"
                }
            }
        }
    },
    "templateParts": [
        {
            "name": "header",
            "title": "Header",
            "area": "header"
        },
        {
            "name": "footer",
            "title": "Footer", 
            "area": "footer"
        }
    ]
}